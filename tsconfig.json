{
  "compilerOptions": {
    "target": "ESNext",
    /* Modules */
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {"@/": ["./src/"]},
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
